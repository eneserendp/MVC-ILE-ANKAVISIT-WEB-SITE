@using TravelTripProje.Models.Siniflar
@model List<Blog>
@foreach (var x in Model)
{
    <div class="right">

        <div class="bot-left">
            <img src="@x.BlogImage"  style ="width:650px;height:200px;" alt="" />
        </div>
        <div class="left-text">

            <h4>@x.Baslik</h4>
            
            <p>@x.Aciklama.Substring(0,100)</p>
            <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
}

